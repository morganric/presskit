<%= simple_form_for(@release, :multipart => true) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <br/>
    <%= f.input :abstract %>
    <br/>
    <label>Pdf</label>
    <%= f.file_field :pdf  %>
    <br/>
    <%= f.input :embargo_date, :as => :date  %>
    <%#= f.input :pdf_file_name %>
    <br/>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
<br/>
