<!DOCTYPE html>
<html ng-app="presskitApp">
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= content_for?(:title) ? yield(:title) : "Presskit" %></title>
    <meta name="description" content="<%= content_for?(:description) ? yield(:description) : "Presskit" %>">
    <%= stylesheet_link_tag "application", media: "all", "data-turbolinks-track" => true %>
    <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
    <%= csrf_meta_tags %>
  </head>
  <body ng-controller="ReleasesListCtrl">
    <header>
      <%= render 'layouts/navigation' %>
    </header>
    <main role="main">
      <section class="container" >
       <%= render 'layouts/messages' %>
       <%= yield %>
       </section>
    </main>
  </body>
</html>
